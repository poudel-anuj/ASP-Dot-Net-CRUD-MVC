@model IEnumerable<Customer.Models.customer>

@{
    ViewBag.Title = "GetCustomerList";
}

<h2>GetCustomerList</h2>

<p>
    @Html.ActionLink("Create New", "Index")
</p>
<table class="table">
    <tr>
        <th>
            <label>Customer Name </label>

        </th>
        <th>
            <label>Customer Email </label>
        </th>
        <th>
            <label>Customer Address </label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.entrydate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.depId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cusEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cusAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.entrydate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.depId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "GetCustomerList", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
